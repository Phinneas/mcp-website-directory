{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "mymcpshelf.com"
        }
      ],
      "destination": "https://www.mymcpshelf.com/:path*",
      "permanent": true
    },
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap-index.xml",
      "permanent": true
    },
    {
      "source": "/blog$",
      "destination": "/blog/",
      "permanent": true
    },
    {
      "source": "/faq$",
      "destination": "/faq/",
      "permanent": true
    },
    {
      "source": "/mcp-clients$",
      "destination": "/mcp-clients/",
      "permanent": true
    },
    {
      "source": "/claude-skills$",
      "destination": "/claude-skills/",
      "permanent": true
    },
    {
      "source": "/blog/:slug$",
      "destination": "/blog/:slug/",
      "permanent": true
    }
  ],
  "trailingSlash": true
}
