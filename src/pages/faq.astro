        </svg>
    </button>

    <div class="container">
        <div class="header">
            <h1>❓ Frequently Asked Questions</h1>
            <p>Everything you need to know about Model Context Protocol and My MCP Shelf</p>
            <div class="nav-links">
                <a href="/" class="nav-link"><FolderIcon client:load size={18} /> Shelf</a>
                <a href="/claude-skills" class="nav-link"><ToolboxIcon client:load size={18} /> Claude Skills</a>
                <a href="/mcp-clients" class="nav-link"><ComputerIcon client:load size={18} /> MCP Clients</a>
                <a href="/blog" class="nav-link"><VintageIcon client:load name="Windows95TextFile" size={18} /> Blog</a>
                <a href="/faq" class="nav-link"><VintageIcon client:load name="Windows95Help" size={18} /> FAQ</a>
            </div>
        </div>

        {faqSections.map((section) => (
            <div class="faq-section">
                <h2 class="section-title">{section.title}</h2>
                <div class="faq-list">
                    {section.items.map((faq) => (
                        <div class="faq-item">
                            <h3 class="faq-question">
                                <span class="question-icon">Q:</span>
                                <span>{faq.question}</span>
                            </h3>
                            <p class="faq-answer">{faq.answer}</p>
                        </div>
                    ))}
                </div>
            </div>
        ))}

        <div class="newsletter-section">
            <h2 class="newsletter-title">Stay Updated</h2>
            <p class="newsletter-subtitle">
                Get the latest MCP servers, blog posts, and best practices delivered to your inbox
            </p>
            <form class="email-form" onsubmit="handleSubscribe(event)">
                <input 
                    type="email" 
                    class="email-input" 
                    placeholder="Enter your email address"
                    required
                    id="emailInput"
                />
                <button type="submit" class="subscribe-btn">Subscribe</button>
            </form>
        </div>

        <div class="footer-links">
            <a href="/"><FolderIcon client:load size={16} /> Back to MCP Shelf</a>
            <a href="/blog"><VintageIcon client:load name="Windows95TextFile" size={16} /> View Blog</a>
            <a href="/claude-skills"><ToolboxIcon client:load size={16} /> Browse Skills</a>
            <a href="/mcp-clients"><ComputerIcon client:load size={16} /> Browse Clients</a>
        </div>
    </div>

    <script>
        // Dark mode toggle
        const themeToggle = document.getElementById('themeToggle');
        const sunIcon = document.getElementById('sunIcon');
        const moonIcon = document.getElementById('moonIcon');
        const html = document.documentElement;

        const currentTheme = localStorage.getItem('theme') || 'light';
        if (currentTheme === 'dark') {
            html.classList.add('dark-mode');
            sunIcon.style.display = 'none';
            moonIcon.style.display = 'block';
        }

        themeToggle.addEventListener('click', () => {
            html.classList.toggle('dark-mode');
            if (html.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                sunIcon.style.display = 'none';
                moonIcon.style.display = 'block';
            } else {
                localStorage.setItem('theme', 'light');
                sunIcon.style.display = 'block';
                moonIcon.style.display = 'none';
            }
        });

        // Newsletter form handler
        function handleSubscribe(event) {
            event.preventDefault();
            const email = document.getElementById('emailInput').value;
            
            // In a real implementation, this would send to your email service
            alert(`Thank you for subscribing! We'll send MCP updates to: ${email}`);
            document.getElementById('emailInput').value = '';
            
            // Track subscription in analytics
            if (typeof plausible !== 'undefined') {
                plausible('Newsletter Subscribe', { props: { location: 'faq' } });
            }
        }

        // Track FAQ page view
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof plausible !== 'undefined') {
                plausible('Pageview', { props: { page: 'faq' } });
            }
        });
    </script>
