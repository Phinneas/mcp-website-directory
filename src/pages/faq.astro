        (function() {
            const theme = localStorage.getItem('theme');
            if (theme === 'dark') {
                document.documentElement.classList.add('dark-mode');
            }
        })();
    </script>

    <!-- Plausible Analytics -->
    <script defer data-domain="mymcpshelf.com" src="https://plausible-analytics-ce-production-7165.up.railway.app/js/script.js"></script>

    <style>
        :root {
            --bg-gradient-start: hsl(var(--background));
            --bg-gradient-end: hsl(var(--background));
            --text-primary: hsl(var(--foreground));
            --card-bg: hsla(var(--card), 1);
            --card-text: hsl(var(--card-foreground));
            --card-shadow: hsla(0, 0%, 0%, 0.1);
            --border-color: hsla(var(--border), 0.2);
            --hero-bg: hsl(220, 40%, 12%);
            --hero-text: hsl(var(--primary-foreground));
            --hero-subtext: hsl(var(--muted-foreground));
            --cta-primary: hsl(var(--primary));
        }

        html.dark-mode {
            --bg-gradient-start: hsl(var(--background));
            --bg-gradient-end: hsl(var(--background));
            --text-primary: hsl(var(--foreground));
            --card-bg: hsla(var(--card), 1);
            --card-text: hsl(var(--card-foreground));
            --card-shadow: hsla(0, 0%, 0%, 0.3);
            --border-color: hsla(var(--border), 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--bg-gradient-start);
            min-height: 100vh;
            color: var(--text-primary);
            transition: background 0.3s ease, color 0.3s ease;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Cabin', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        .theme-toggle {
            position: fixed;
            top: 1.5rem;
            right: 1.5rem;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 12px var(--card-shadow);
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .theme-toggle:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px var(--card-shadow);
        }

        .theme-toggle svg {
            width: 24px;
            height: 24px;
            fill: var(--card-text);
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 2rem;
        }

        .header {
            text-align: center;
            padding: 3rem 2rem;
            background: var(--hero-bg);
            color: var(--hero-text);
            border-radius: 16px;
            margin-bottom: 3rem;
        }

        .header h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            font-weight: 700;
            color: var(--hero-text);
        }

        .header p {
            font-size: 1.2rem;
            color: var(--hero-subtext);
            max-width: 600px;
            margin: 0 auto 1.5rem;
        }

        .nav-links {
            margin-top: 1.5rem;
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .nav-link {
            color: hsl(var(--foreground) / 0.9);
            text-decoration: none;
            background: hsl(var(--muted) / 0.2);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            border: 1px solid hsl(var(--border));
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: hsl(var(--muted) / 0.3);
            transform: translateY(-2px);
        }

        .faq-section {
            margin-bottom: 3rem;
        }

        .section-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--card-text);
            margin-bottom: 2rem;
            padding-bottom: 0.75rem;
            border-bottom: 3px solid var(--cta-primary);
        }

        .faq-list {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .faq-item {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 1.5rem 2rem;
            box-shadow: 0 4px 20px var(--card-shadow);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .faq-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 24px var(--card-shadow);
        }

        .faq-question {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--card-text);
            margin-bottom: 1rem;
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .question-icon {
            color: var(--cta-primary);
            font-size: 1.2rem;
            flex-shrink: 0;
            font-weight: 700;
        }

        .faq-answer {
            color: hsl(var(--muted-foreground));
            line-height: 1.7;
            font-size: 1rem;
            padding-left: 1.95rem;
        }

        html.dark-mode .faq-answer {
            color: hsl(var(--muted-foreground));
        }

        .newsletter-section {
            background: var(--hero-bg);
            color: var(--hero-text);
            padding: 3rem 2rem;
            border-radius: 16px;
            text-align: center;
            margin: 3rem 0;
        }

        .newsletter-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--hero-text);
        }

        .newsletter-subtitle {
            font-size: 1.1rem;
            color: var(--hero-subtext);
            margin-bottom: 2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .email-form {
            display: flex;
            gap: 1rem;
            max-width: 500px;
            margin: 0 auto;
        }

        .email-input {
            flex: 1;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            background: rgba(255,255,255,0.1);
            color: white;
        }

        .email-input::placeholder {
            color: rgba(255,255,255,0.6);
        }

        .subscribe-btn {
            background: var(--cta-primary);
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .subscribe-btn:hover {
            background: #d97706;
            transform: translateY(-2px);
        }

        .footer-links {
            text-align: center;
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid var(--border-color);
        }

        .footer-links a {
            color: var(--cta-primary);
            text-decoration: none;
            font-weight: 600;
            margin: 0 1rem;
            transition: color 0.3s ease;
        }

        .footer-links a:hover {
            color: #d97706;
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2rem;
            }

            .container {
                padding: 1rem;
            }

            .section-title {
                font-size: 1.5rem;
            }

            .faq-item {
                padding: 1.25rem 1.5rem;
            }

            .faq-question {
                font-size: 1.1rem;
            }

            .email-form {
                flex-direction: column;
            }

            .footer-links a {
                display: block;
                margin: 0.5rem 0;
            }
        }
    </style>
</head>
<body>
