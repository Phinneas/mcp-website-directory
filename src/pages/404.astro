---
/**
 * 404 Not Found Page
 */
import { FolderIcon, ToolboxIcon, ComputerIcon, VintageIcon } from '../components/VintageIcon';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Page Not Found | MyMCPShelf</title>
  <meta name="description" content="The page you're looking for doesn't exist. Browse our directory of MCP servers.">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/favicon.png" type="image/png">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.7;
      color: hsl(var(--foreground));
      background: hsl(var(--background));
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    .nav-links {
      position: fixed;
      top: 2rem;
      left: 2rem;
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .nav-links a {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      color: hsl(var(--muted-foreground));
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      font-size: 0.9rem;
      transition: all 0.2s ease;
      background: hsl(var(--card));
      border: 1px solid hsl(var(--border));
    }

    .nav-links a:hover {
      color: hsl(var(--primary));
      border-color: hsl(var(--primary));
    }

    .error-code {
      font-size: 8rem;
      font-weight: 800;
      background: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--secondary)) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      line-height: 1;
      margin-bottom: 1rem;
    }

    h1 {
      font-size: 2rem;
      font-weight: 700;
      color: hsl(var(--foreground));
      margin-bottom: 1rem;
    }

    p {
      color: hsl(var(--muted-foreground));
      font-size: 1.1rem;
      margin-bottom: 2rem;
      max-width: 400px;
    }

    .actions {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .btn-primary {
      background: hsl(var(--primary));
      color: white;
    }

    .btn-primary:hover {
      background: hsl(var(--primary) / 90%);
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: hsl(var(--card));
      color: hsl(var(--foreground));
      border: 1px solid hsl(var(--border));
    }

    .btn-secondary:hover {
      background: hsl(var(--muted));
      border-color: hsl(var(--border));
    }

    .search-suggestion {
      margin-top: 3rem;
      padding: 2rem;
      background: hsl(var(--card));
      border-radius: 12px;
      border: 1px solid hsl(var(--border));
      max-width: 500px;
    }

    .search-suggestion h3 {
      font-size: 1rem;
      font-weight: 600;
      color: hsl(var(--foreground));
      margin-bottom: 0.75rem;
    }

    .search-input-wrapper {
      display: flex;
      gap: 0.5rem;
    }

    .search-input {
      flex: 1;
      padding: 0.75rem 1rem;
      border: 1px solid hsl(var(--border));
      border-radius: 8px;
      font-size: 1rem;
      outline: none;
      transition: border-color 0.2s ease;
    }

    .search-input:focus {
      border-color: hsl(var(--primary));
    }

    .search-btn {
      padding: 0.75rem 1.25rem;
      background: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--secondary)) 100%);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .search-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(var(--primary-rgb), 0.3);
    }

    @media (max-width: 768px) {
      .nav-links {
        position: static;
        margin-bottom: 2rem;
        justify-content: center;
      }

      .error-code {
        font-size: 5rem;
      }

      h1 {
        font-size: 1.5rem;
      }

      .actions {
        flex-direction: column;
        width: 100%;
      }

      .btn {
        width: 100%;
        justify-content: center;
      }

      .search-input-wrapper {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <nav class="nav-links">
    <a href="/"><FolderIcon client:load size={16} /> Shelf</a>
    <a href="/claude-skills"><ToolboxIcon client:load size={16} /> Claude Skills</a>
    <a href="/mcp-clients"><ComputerIcon client:load size={16} /> MCP Clients</a>
    <a href="/blog"><VintageIcon client:load name="Windows95TextFile" size={16} /> Blog</a>
  </nav>

  <div class="container">
    <div class="error-code">404</div>
    <h1>Page Not Found</h1>
    <p>The MCP server or page you're looking for doesn't exist or has been removed.</p>

    <div class="actions">
      <a href="/" class="btn btn-primary">Browse All Servers</a>
      <a href="/blog" class="btn btn-secondary">Read Our Blog</a>
    </div>

    <div class="search-suggestion">
      <h3>Looking for a specific server?</h3>
      <form action="/" method="get" class="search-input-wrapper">
        <input type="text" name="search" class="search-input" placeholder="Search MCP servers...">
        <button type="submit" class="search-btn">Search</button>
      </form>
    </div>
  </div>
</body>
</html>
