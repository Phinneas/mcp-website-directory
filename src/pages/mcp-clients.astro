---
// MCP Clients Page
import clientsData from '../../clients.json';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MCP Clients | My MCP Shelf</title>
    <meta name="description" content="Discover MCP client applications and integrations for connecting to MCP servers">
    <link rel="canonical" href="https://www.mymcpshelf.com/mcp-clients/" />
    <meta name="google-site-verification" content="qmL-eYN3ygqiuLXVWHuWWko8vIBJj3hAYizdpo7dDug" />
    <meta name="msvalidate.01" content="8AA5A1EBF656D16B95B78BE654843905" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.png" type="image/png">

    <!-- Plausible Analytics -->
    <script defer data-domain="mymcpshelf.com" src="https://plausible-analytics-ce-production-7165.up.railway.app/js/script.js"></script>

    <style>
        :root {
            --bg-gradient-start: #667eea;
            --bg-gradient-end: #764ba2;
            --text-primary: #333;
            --text-light: rgba(255, 255, 255, 0.9);
            --card-bg: rgba(255, 255, 255, 1);
            --card-text: #333;
            --card-shadow: rgba(0, 0, 0, 0.1);
            --border-color: rgba(255, 255, 255, 0.2);
        }

        body.dark-mode {
            --bg-gradient-start: #1a1a2e;
            --bg-gradient-end: #16213e;
            --text-primary: #e0e0e0;
            --text-light: rgba(255, 255, 255, 0.95);
            --card-bg: rgba(30, 30, 46, 1);
            --card-text: #e0e0e0;
            --card-shadow: rgba(0, 0, 0, 0.3);
            --border-color: rgba(255, 255, 255, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
            color: var(--text-primary);
            transition: background 0.3s ease, color 0.3s ease;
        }

        .theme-toggle {
            position: fixed;
            top: 1.5rem;
            right: 1.5rem;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 12px var(--card-shadow);
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .theme-toggle:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px var(--card-shadow);
        }

        .theme-toggle svg {
            width: 24px;
            height: 24px;
            fill: var(--card-text);
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .header {
            text-align: center;
            padding: 3rem 2rem;
            color: white;
        }

        .header h1 {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.95;
            max-width: 600px;
            margin: 0 auto;
        }

        .nav-links {
            margin-top: 1.5rem;
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .nav-link {
            color: rgba(255,255,255,0.9);
            text-decoration: none;
            background: rgba(255,255,255,0.1);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            border: 1px solid rgba(255,255,255,0.2);
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: rgba(255,255,255,0.2);
            transform: translateY(-2px);
        }

        .search-section {
            max-width: 900px;
            margin: 2rem auto;
        }

        .search-bar {
            background: var(--card-bg);
            border-radius: 50px;
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .search-icon {
            font-size: 1.5rem;
            margin-right: 1rem;
        }

        .search-input {
            flex: 1;
            border: none;
            outline: none;
            font-size: 1.1rem;
            background: transparent;
        }

        .clients-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .client-card {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 20px var(--card-shadow);
            transition: all 0.3s ease;
        }

        .client-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.15);
        }

        .client-header {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .client-icon {
            font-size: 2rem;
            margin-right: 1rem;
        }

        .client-title h3 {
            font-size: 1.3rem;
            margin-bottom: 0.3rem;
            color: var(--card-text);
        }

        .client-category {
            font-size: 0.85rem;
            color: #667eea;
            font-weight: 600;
        }

        .client-description {
            color: var(--card-text);
            opacity: 0.8;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .client-meta {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
            margin-bottom: 1rem;
        }

        .meta-tag {
            background: #f0f2ff;
            color: #667eea;
            padding: 0.3rem 0.8rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .repo-stats {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-top: 0.5rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .repo-stat {
            display: flex;
            align-items: center;
            gap: 0.3rem;
            font-size: 0.75rem;
            color: #666;
        }

        .repo-stat-fresh {
            color: #10b981;
        }

        .repo-stat-stale {
            color: #f59e0b;
        }

        .repo-stat-abandoned {
            color: #ef4444;
        }

        .repo-stat-loading {
            color: #999;
            font-style: italic;
        }

        .client-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn {
            padding: 0.7rem 1.2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-block;
            border: none;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2.5rem;
            }

            .clients-grid {
                grid-template-columns: 1fr;
            }

            .container {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Dark Mode Toggle -->
    <button class="theme-toggle" id="themeToggle" aria-label="Toggle dark mode">
        <svg id="sunIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="5"/>
            <line x1="12" y1="1" x2="12" y2="3" stroke="currentColor" stroke-width="2"/>
            <line x1="12" y1="21" x2="12" y2="23" stroke="currentColor" stroke-width="2"/>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" stroke="currentColor" stroke-width="2"/>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" stroke="currentColor" stroke-width="2"/>
            <line x1="1" y1="12" x2="3" y2="12" stroke="currentColor" stroke-width="2"/>
            <line x1="21" y1="12" x2="23" y2="12" stroke="currentColor" stroke-width="2"/>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" stroke="currentColor" stroke-width="2"/>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" stroke="currentColor" stroke-width="2"/>
        </svg>
        <svg id="moonIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="display: none;">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
    </button>

    <div class="container">
        <div class="header">
            <h1>MCP Clients</h1>
            <p>Explore applications and tools that connect to MCP servers</p>
            <div class="nav-links">
                <a href="/" class="nav-link">üè† Shelf</a>
                <a href="/claude-skills" class="nav-link">‚ö° Claude Skills</a>
                <a href="/blog" class="nav-link">üìù Blog</a>
            </div>
        </div>

        <div class="search-section">
            <div class="search-bar">
                <span class="search-icon">üîç</span>
                <input type="text" class="search-input" placeholder="Search MCP clients..." id="searchInput">
            </div>
            <div style="text-align: center; color: white; margin-top: 1rem;">
                <p>{clientsData.length} MCP clients available</p>
            </div>
        </div>

        <div class="clients-grid" id="clientsGrid">
            {clientsData.map((client) => (
                <div class="client-card">
                    <div class="client-header">
                        <div class="client-icon">üíª</div>
                        <div class="client-title">
                            <h3>{client.title}</h3>
                            <div class="client-category">MCP Client</div>
                        </div>
                    </div>
                    <div class="client-description">
                        {client.description.length > 150
                            ? client.description.substring(0, 150) + '...'
                            : client.description}
                    </div>
                    {client.stars > 0 && (
                        <div class="client-meta">
                            <span class="meta-tag">‚≠ê {client.stars}</span>
                        </div>
                    )}
                    <div class="repo-stats" data-github-url={client.url}>
                        <span class="repo-stat repo-stat-loading">Loading...</span>
                    </div>
                    <div class="client-actions">
                        <a href={client.url} target="_blank" rel="noopener noreferrer" class="btn btn-primary">View on GitHub</a>
                    </div>
                </div>
            ))}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const clientsGrid = document.getElementById('clientsGrid');

            function filterClients() {
                const searchTerm = searchInput.value.toLowerCase();
                const cards = clientsGrid.querySelectorAll('.client-card');

                cards.forEach(card => {
                    const title = card.querySelector('h3').textContent.toLowerCase();
                    const description = card.querySelector('.client-description').textContent.toLowerCase();

                    const matchesSearch = title.includes(searchTerm) || description.includes(searchTerm);

                    if (matchesSearch) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterClients);

            // GitHub repo stats fetching
            async function fetchRepoStats(githubUrl, statsElement) {
                const match = githubUrl?.match(/github\.com\/([^/]+\/[^/]+)/);
                if (!match) {
                    statsElement.innerHTML = '';
                    return;
                }

                const repo = match[1];
                // TODO: Replace with your actual Cloudflare Worker URL after deployment
                const workerUrl = `https://YOUR_WORKER_URL.workers.dev?repo=${encodeURIComponent(repo)}`;

                try {
                    const response = await fetch(workerUrl);
                    const data = await response.json();

                    // Calculate days since last commit
                    const lastCommit = new Date(data.pushedAt);
                    const now = new Date();
                    const daysAgo = Math.floor((now - lastCommit) / (1000 * 60 * 60 * 24));

                    // Determine freshness status
                    let freshnessClass = 'repo-stat-fresh';
                    let freshnessText = '';
                    if (daysAgo < 30) {
                        freshnessClass = 'repo-stat-fresh';
                        freshnessText = daysAgo === 0 ? 'Today' : daysAgo === 1 ? 'Yesterday' : `${daysAgo}d ago`;
                    } else if (daysAgo < 90) {
                        freshnessClass = 'repo-stat-stale';
                        const monthsAgo = Math.floor(daysAgo / 30);
                        freshnessText = monthsAgo === 1 ? '1mo ago' : `${monthsAgo}mo ago`;
                    } else {
                        freshnessClass = 'repo-stat-abandoned';
                        const monthsAgo = Math.floor(daysAgo / 30);
                        freshnessText = monthsAgo === 1 ? '1mo ago' : `${monthsAgo}mo ago`;
                    }

                    // Display issues count
                    const issuesClass = data.openIssues > 50 ? 'repo-stat-stale' : 'repo-stat';

                    statsElement.innerHTML = `
                        <span class="repo-stat ${freshnessClass}">
                            üìÖ ${freshnessText}
                        </span>
                        <span class="repo-stat ${issuesClass}">
                            üêõ ${data.openIssues} issues
                        </span>
                    `;
                } catch (error) {
                    console.error('Failed to fetch repo stats:', error);
                    statsElement.innerHTML = '';
                }
            }

            // Fetch stats for all visible clients
            const repoStatsElements = document.querySelectorAll('.repo-stats');
            repoStatsElements.forEach((statsElement, index) => {
                const githubUrl = statsElement.getAttribute('data-github-url');
                if (githubUrl) {
                    // Stagger requests to avoid rate limiting (100ms between each)
                    setTimeout(() => {
                        fetchRepoStats(githubUrl, statsElement);
                    }, index * 100);
                } else {
                    statsElement.innerHTML = '';
                }
            });
        });

        // Dark mode toggle
        const themeToggle = document.getElementById('themeToggle');
        const sunIcon = document.getElementById('sunIcon');
        const moonIcon = document.getElementById('moonIcon');
        const body = document.body;

        const currentTheme = localStorage.getItem('theme') || 'light';
        if (currentTheme === 'dark') {
            body.classList.add('dark-mode');
            sunIcon.style.display = 'none';
            moonIcon.style.display = 'block';
        }

        themeToggle.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            if (body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                sunIcon.style.display = 'none';
                moonIcon.style.display = 'block';
            } else {
                localStorage.setItem('theme', 'light');
                sunIcon.style.display = 'block';
                moonIcon.style.display = 'none';
            }
        });
    </script>
</body>
</html>
