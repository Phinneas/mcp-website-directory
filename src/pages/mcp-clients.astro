---
// MCP Clients Page
import clientsData from '../../clients.json';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MCP Clients | My MCP Shelf</title>
    <meta name="description" content="Discover MCP client applications and integrations for connecting to MCP servers">
    <link rel="canonical" href="https://www.mymcpshelf.com/mcp-clients/" />
    <meta name="google-site-verification" content="qmL-eYN3ygqiuLXVWHuWWko8vIBJj3hAYizdpo7dDug" />
    <meta name="msvalidate.01" content="8AA5A1EBF656D16B95B78BE654843905" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.png" type="image/png">

    <!-- Plausible Analytics -->
    <script defer data-domain="mymcpshelf.com" src="https://plausible-analytics-ce-production-7165.up.railway.app/js/script.js"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .header {
            text-align: center;
            padding: 3rem 2rem;
            color: white;
        }

        .header h1 {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.95;
            max-width: 600px;
            margin: 0 auto;
        }

        .nav-links {
            margin-top: 1.5rem;
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .nav-link {
            color: rgba(255,255,255,0.9);
            text-decoration: none;
            background: rgba(255,255,255,0.1);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            border: 1px solid rgba(255,255,255,0.2);
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: rgba(255,255,255,0.2);
            transform: translateY(-2px);
        }

        .search-section {
            max-width: 900px;
            margin: 2rem auto;
        }

        .search-bar {
            background: white;
            border-radius: 50px;
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .search-icon {
            font-size: 1.5rem;
            margin-right: 1rem;
        }

        .search-input {
            flex: 1;
            border: none;
            outline: none;
            font-size: 1.1rem;
            background: transparent;
        }

        .clients-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .client-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .client-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.15);
        }

        .client-header {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .client-icon {
            font-size: 2rem;
            margin-right: 1rem;
        }

        .client-title h3 {
            font-size: 1.3rem;
            margin-bottom: 0.3rem;
            color: #333;
        }

        .client-category {
            font-size: 0.85rem;
            color: #667eea;
            font-weight: 600;
        }

        .client-description {
            color: #666;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .client-meta {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
            margin-bottom: 1rem;
        }

        .meta-tag {
            background: #f0f2ff;
            color: #667eea;
            padding: 0.3rem 0.8rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .client-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn {
            padding: 0.7rem 1.2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-block;
            border: none;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2.5rem;
            }

            .clients-grid {
                grid-template-columns: 1fr;
            }

            .container {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="/" style="display: inline-block; margin-bottom: 1rem;">
                <img src="/logo.png" alt="My MCP Shelf Logo" style="width: 150px; height: auto; background: white; padding: 1rem; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
            </a>
            <h1>MCP Clients</h1>
            <p>Explore applications and tools that connect to MCP servers</p>
            <div class="nav-links">
                <a href="/" class="nav-link">üè† Shelf</a>
                <a href="/claude-skills" class="nav-link">‚ö° Claude Skills</a>
                <a href="/blog" class="nav-link">üìù Blog</a>
            </div>
        </div>

        <div class="search-section">
            <div class="search-bar">
                <span class="search-icon">üîç</span>
                <input type="text" class="search-input" placeholder="Search MCP clients..." id="searchInput">
            </div>
            <div style="text-align: center; color: white; margin-top: 1rem;">
                <p>{clientsData.length} MCP clients available</p>
            </div>
        </div>

        <div class="clients-grid" id="clientsGrid">
            {clientsData.map((client) => (
                <div class="client-card">
                    <div class="client-header">
                        <div class="client-icon">üíª</div>
                        <div class="client-title">
                            <h3>{client.title}</h3>
                            <div class="client-category">MCP Client</div>
                        </div>
                    </div>
                    <div class="client-description">
                        {client.description.length > 150
                            ? client.description.substring(0, 150) + '...'
                            : client.description}
                    </div>
                    {client.stars > 0 && (
                        <div class="client-meta">
                            <span class="meta-tag">‚≠ê {client.stars}</span>
                        </div>
                    )}
                    <div class="client-actions">
                        <a href={client.url} target="_blank" rel="noopener noreferrer" class="btn btn-primary">View on GitHub</a>
                    </div>
                </div>
            ))}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const clientsGrid = document.getElementById('clientsGrid');

            function filterClients() {
                const searchTerm = searchInput.value.toLowerCase();
                const cards = clientsGrid.querySelectorAll('.client-card');

                cards.forEach(card => {
                    const title = card.querySelector('h3').textContent.toLowerCase();
                    const description = card.querySelector('.client-description').textContent.toLowerCase();

                    const matchesSearch = title.includes(searchTerm) || description.includes(searchTerm);

                    if (matchesSearch) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterClients);
        });
    </script>
</body>
</html>
