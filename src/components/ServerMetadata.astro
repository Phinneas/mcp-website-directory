---
/**
 * ServerMetadata Component - Sidebar with quick stats and links
 */
import { getCategoryDisplayName, formatStars } from '../utils/serverData.js';
import { slugify } from '../utils/slugify.js';

interface Props {
  server: {
    fields: {
      name?: string;
      category?: string;
      language?: string;
      license?: string;
      github_url?: string;
      npm_package?: string;
      documentation_url?: string;
      homepage_url?: string;
      downloads?: number;
      stars?: number;
    };
  };
}

const { server } = Astro.props;
const { fields } = server;

// Build links array
const links = [];
if (fields.github_url) {
  links.push({
    label: 'GitHub Repository',
    url: fields.github_url,
    icon: 'github'
  });
}
if (fields.npm_package) {
  links.push({
    label: 'NPM Package',
    url: `https://www.npmjs.com/package/${fields.npm_package}`,
    icon: 'npm'
  });
}
if (fields.documentation_url) {
  links.push({
    label: 'Documentation',
    url: fields.documentation_url,
    icon: 'docs'
  });
}
if (fields.homepage_url) {
  links.push({
    label: 'Homepage',
    url: fields.homepage_url,
    icon: 'home'
  });
}
---

<aside class="server-metadata">
  <div class="metadata-section">
    <h3 class="metadata-title">Quick Info</h3>
    
    <div class="metadata-grid">
      {fields.category && (
        <div class="metadata-item">
          <span class="metadata-label">Category</span>
          <a href={`/#serversGrid?category=${fields.category}`} class="metadata-value category-link">
            {getCategoryDisplayName(fields.category)}
          </a>
        </div>
      )}
      
      {fields.language && (
        <div class="metadata-item">
          <span class="metadata-label">Language</span>
          <span class="metadata-value">{fields.language}</span>
        </div>
      )}
      
      {fields.license && (
        <div class="metadata-item">
          <span class="metadata-label">License</span>
          <span class="metadata-value">{fields.license}</span>
        </div>
      )}

      {fields.downloads && fields.downloads > 0 && (
        <div class="metadata-item">
          <span class="metadata-label">Downloads</span>
          <span class="metadata-value">{fields.downloads.toLocaleString()}</span>
        </div>
      )}
    </div>
  </div>

  {links.length > 0 && (
    <div class="metadata-section">
      <h3 class="metadata-title">Links</h3>
      
      <div class="links-list">
        {links.map(link => (
          <a href={link.url} class="link-item" target="_blank" rel="noopener noreferrer">
            {link.icon === 'github' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
              </svg>
            )}
            {link.icon === 'npm' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331z"/>
              </svg>
            )}
            {link.icon === 'docs' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
              </svg>
            )}
            {link.icon === 'home' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
            )}
            <span>{link.label}</span>
            <svg class="external-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
        ))}
      </div>
    </div>
  )}
</aside>

<style>
  .server-metadata {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 12px;
    padding: 1.5rem;
    position: sticky;
    top: 2rem;
  }

  .metadata-section {
    margin-bottom: 1.5rem;
  }

  .metadata-section:last-child {
    margin-bottom: 0;
  }

  .metadata-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: hsl(var(--muted-foreground));
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid hsl(var(--border));
  }

  .metadata-grid {
    display: grid;
    gap: 0.75rem;
  }

  .metadata-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .metadata-label {
    font-size: 0.8rem;
    color: hsl(var(--muted-foreground));
    font-weight: 500;
  }

  .metadata-value {
    font-size: 0.95rem;
    color: hsl(var(--card-foreground));
    font-weight: 500;
  }

  .category-link {
    color: hsl(var(--primary));
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .category-link:hover {
    color: hsl(var(--primary) / 80%);
    text-decoration: underline;
  }

  .links-list {
    display: grid;
    gap: 0.5rem;
  }

  .link-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 0.75rem;
    background: hsl(var(--muted));
    border-radius: 8px;
    color: hsl(var(--card-foreground));
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .link-item:hover {
    background: hsl(var(--muted) / 0.8);
    color: hsl(var(--card-foreground));
  }

  .link-item svg {
    color: hsl(var(--muted-foreground));
    flex-shrink: 0;
  }

  .link-item:hover svg {
    color: hsl(var(--card-foreground));
  }

  .link-item span {
    flex: 1;
  }

  .external-icon {
    opacity: 0.5;
  }

  @media (max-width: 1024px) {
    .server-metadata {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .server-metadata {
      padding: 1rem;
    }

    .link-item {
      padding: 0.5rem 0.6rem;
      font-size: 0.85rem;
    }
  }
</style>
