---
/**
 * ServerTools Component - Display available tools/prompts for the server
 */
interface Tool {
  name: string;
  description: string;
  category?: string;
}

interface Props {
  tools?: Tool[];
}

const { tools = [] } = Astro.props;

// Group tools by category
const groupedTools: Record<string, Tool[]> = {};
for (const tool of tools) {
  const category = tool.category || 'General';
  if (!groupedTools[category]) {
    groupedTools[category] = [];
  }
  groupedTools[category].push(tool);
}

const hasTools = tools.length > 0;
---

{hasTools && (
  <section class="tools-section">
    <h2 class="section-title">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
      </svg>
      Available Tools
      <span class="tool-count">{tools.length}</span>
    </h2>

    <div class="tools-grid">
      {Object.entries(groupedTools).map(([category, categoryTools]) => (
        <div class="tool-category">
          <h3 class="category-title">{category}</h3>
          <ul class="tool-list">
            {categoryTools.map(tool => (
              <li class="tool-item">
                <code class="tool-name">{tool.name}</code>
                <span class="tool-description">{tool.description}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>
)}

<style>
  .tools-section {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: hsl(var(--card-foreground));
    margin: 0 0 1.25rem 0;
  }

  .section-title svg {
    color: hsl(var(--muted-foreground));
  }

  .tool-count {
    background: hsla(var(--primary), 0.1);
    color: hsl(var(--primary));
    padding: 0.2rem 0.6rem;
    border-radius: 9999px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .tools-grid {
    display: grid;
    gap: 1.5rem;
  }

  .tool-category {
    /* Category container */
  }

  .category-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: hsl(var(--muted-foreground));
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.75rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid hsl(var(--border));
  }

  .tool-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0.75rem;
  }

  .tool-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.75rem;
    background: hsl(var(--muted));
    border-radius: 8px;
    transition: background 0.2s ease;
  }

  .tool-item:hover {
    background: hsl(var(--muted) / 0.8);
  }

  .tool-name {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace;
    font-size: 0.9rem;
    font-weight: 600;
    color: hsl(var(--primary));
    background: hsla(var(--primary), 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    width: fit-content;
  }

  .tool-description {
    color: hsl(var(--muted-foreground));
    font-size: 0.9rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .tools-section {
      padding: 1rem;
    }

    .tool-item {
      padding: 0.6rem;
    }

    .tool-name {
      font-size: 0.85rem;
    }

    .tool-description {
      font-size: 0.85rem;
    }
  }
</style>
