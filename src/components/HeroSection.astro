---
// HeroSection.astro - Hero section with directory cards
import { DatabaseIcon, ToolboxIcon, ComputerIcon } from './VintageIcon';

interface Props {
    serverCount?: number;
    skillsCount?: number;
    clientsCount?: number;
}

const { serverCount = 600, skillsCount = 68, clientsCount = 250 } = Astro.props;
---

<section class="hero-section">
    <div class="hero-container">
        <!-- Main Headline -->
        <h1 class="hero-headline">Your Complete MCP Ecosystem</h1>
        
        <!-- Subheadline -->
        <p class="hero-subheadline">
            Everything you need to discover, understand, and implement Model Context Protocol. 
            Curated servers, verified clients, and pre-built skills. All in one place.
        </p>
        
        <!-- Three-card grid -->
        <div class="directory-cards">
            <a href="/" class="directory-card">
                <div class="card-icon"><DatabaseIcon client:load size={40} /></div>
                <h3 class="card-title">MCP Servers</h3>
                <div class="card-count">{serverCount} Verified</div>
                <div class="card-subtitle">Updated weekly</div>
                <span class="card-cta">Explore Servers →</span>
            </a>
            
            <a href="/claude-skills" class="directory-card">
                <div class="card-icon"><ToolboxIcon client:load size={40} /></div>
                <h3 class="card-title">Claude Skills</h3>
                <div class="card-count">{skillsCount} Pre-built</div>
                <div class="card-subtitle">Ready to use</div>
                <span class="card-cta">Explore Skills →</span>
            </a>
            
            <a href="/mcp-clients" class="directory-card">
                <div class="card-icon"><ComputerIcon client:load size={40} /></div>
                <h3 class="card-title">MCP Clients</h3>
                <div class="card-count">{clientsCount}+ Apps</div>
                <div class="card-subtitle">For your workflow</div>
                <span class="card-cta">Explore Clients →</span>
            </a>
        </div>
        
        <!-- Trust row -->
        <div class="trust-row">
            <span class="trust-item">Updated Weekly</span>
            <span class="trust-divider">•</span>
            <span class="trust-item">Community-Verified</span>
            <span class="trust-divider">•</span>
            <span class="trust-item">GitHub Stars Show Real Usage</span>
            <span class="trust-divider">•</span>
            <a href="/blog/understanding-mcp-quality-standards" class="trust-link">How We Verify?</a>
        </div>
    </div>
</section>

<style>
    .hero-section {
        background: #0f172a;
        color: #ffffff;
        padding: 5rem 1rem 4rem;
        text-align: center;
    }
    
    .hero-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .hero-headline {
        font-size: 3.5rem;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 1.5rem;
        line-height: 1.1;
    }
    
    .hero-subheadline {
        font-size: 1.25rem;
        color: #cbd5e1;
        max-width: 700px;
        margin: 0 auto 3rem;
        line-height: 1.7;
    }
    
    .directory-cards {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        max-width: 900px;
        margin: 0 auto 2.5rem;
    }
    
    .directory-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 2rem 1.5rem;
        text-decoration: none;
        color: #1f2937;
        border: 1px solid #e5e7eb;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .directory-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }
    
    .card-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #667eea;
    }
    
    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #1f2937;
    }
    
    .card-count {
        font-size: 1rem;
        font-weight: 600;
        color: #6b7280;
        margin-bottom: 0.25rem;
    }
    
    .card-subtitle {
        font-size: 0.875rem;
        color: #9ca3af;
        margin-bottom: 1rem;
    }
    
    .card-cta {
        background: #f59e0b;
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .directory-card:hover .card-cta {
        background: #d97706;
    }
    
    .trust-row {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        flex-wrap: wrap;
        color: #94a3b8;
        font-size: 0.9rem;
    }
    
    .trust-item {
        color: #94a3b8;
    }
    
    .trust-divider {
        color: #475569;
    }
    
    .trust-link {
        color: #f59e0b;
        text-decoration: underline;
        transition: color 0.3s ease;
    }
    
    .trust-link:hover {
        color: #fbbf24;
    }
    
    @media (max-width: 768px) {
        .hero-headline {
            font-size: 2.5rem;
        }
        
        .hero-subheadline {
            font-size: 1.1rem;
        }
        
        .directory-cards {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .trust-row {
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .trust-divider {
            display: none;
        }
    }
    
    @media (max-width: 1024px) and (min-width: 769px) {
        .directory-cards {
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
        }
        
        .directory-card {
            padding: 1.5rem 1rem;
        }
    }
</style>
